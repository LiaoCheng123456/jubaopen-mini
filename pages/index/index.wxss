.main{
  width: 100%;
}
/* 头部搜索区域 */
.header_warp{
  display: flex;
  background-color: #000;
  padding: 5rpx;
}
.header_warp text{
  margin-left: 14rpx;
}

.header_category {
  flex: 1;
  font-size: 20rpx;
  color: #FFF;
}

.header_category image{
  display: flex;
  justify-content:center;
  align-items: center;
  width: 39rpx;
  height: 39rpx;
  margin-left: 14rpx;
  margin-top: 3rpx;
}

.header_search{
  flex: 8;
}

.header_search input{
  border: 1px solid #FFF;
  border-radius: 30rpx;
  background-color: #FFF; 
  font-size: 23rpx;
  padding-left: 25rpx;
  margin-top: 6.5rpx;
}

.jubaopen{
  flex: 1;
}

.jubaopen image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 12rpx;
  margin-top: 8rpx;
}

/* 热搜 */
.hotSearch{
  background-color:#000; 
  display: flex;
  font-size: 25rpx; 
  white-space: nowrap;
  color: white;
  overflow: hidden;
}

.hotSearch > view{
  margin:15rpx 15rpx;
}

.hotSearch scroll-view {
  white-space: nowrap;
}

.hotSearch_item {
  border: 0rpx solid #FFF;
  border-radius: 20rpx; 
  margin: 15rpx 10rpx;
  padding:0rpx 15rpx;
  justify-content:center;
  align-items: center;
  display:inline-block;
  background-color: #666;
}

/* banner图片 */
.banner_warp {
  width: 100%;
}

.banner_warp .banner_item{
  width: 100%;
  height: 100%;
}

.banner_warp .banner_image {
  width: 100%;
  height: 90%;
}

/* 导航 */
.nav_warp{
  display: flex;
  flex-wrap: wrap;
  padding-left:15rpx;
}

.nav_image{
  width: 70rpx;
  height: 70rpx;
}

.nav_title{
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 20rpx;
  margin: 0 10rpx;
}

.nav_navigator {
  display: flex;
  margin: 10rpx;
  justify-content:center;
  align-items: center;
  white-space: nowrap;
  width: 160rpx;
  height: 60px;
}


/* 推荐分类 */
.recommend_warp {
  display: flex;
  font-size: 26rpx;
  white-space: nowrap;
  text-align: center;
  overflow: hidden;
  height: 124rpx;
}

.recommend_warp view {
  display: inline-block;
}

.recommend_img {
  height: 100%;
  width: 30rpx;
}

.r_navigator {
  display: inline-block;
  margin: -15rpx 0rpx;
  width: 137rpx;
}

.r_t {
  font-size: 16px;
}

.r_f {
  font-size: 10px;
  color: #666;
}

.active {
  border-bottom: 1rpx solid #000;
  color: red;
}